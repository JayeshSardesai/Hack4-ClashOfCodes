<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Service Orders</title>
    <style>
        /* Add your styles here */
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            background-color: #f4f4f9;
        }
        .container {
            width: 80%;
            margin: 50px auto;
            padding: 20px;
            background-color: white;
            border-radius: 8px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }
        h1 {
            text-align: center;
            color: #333;
        }
        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
        }
        th, td {
            padding: 10px;
            text-align: left;
            border: 1px solid #ddd;
        }
        th {
            background-color: #4CAF50;
            color: white;
        }
        td {
            background-color: #f9f9f9;
        }
        img {
            width: 100px;
            height: auto;
        }
        .delete-btn {
            background-color: red;
            color: white;
            padding: 10px 20px;
            border: none;
            cursor: pointer;
        }
        .view-link {
            color: #4CAF50;
            text-decoration: none;
        }
    </style>
</head>
<body>
    <div class="container">
        <h1>Service Orders</h1>
        <table>
            <thead>
                <tr>
                    <th>Service Type</th>
                    <th>Service Description</th>
                    <th>Customer Name</th>
                    <th>Email</th>
                    <th>City</th>
                    <th>Photo</th>
                    <th>Actions</th>
                    <th>More Info</th>
                </tr>
            </thead>
            <tbody>
                <% orders.forEach(order => { %>
                    <tr>
                        <td><%= order.serviceType %></td>
                        <td><%= order.serviceDescription %></td>
                        <td><%= order.customerName %></td>
                        <td><%= order.email %></td>
                        <td><%= order.city %></td>
                        <td><img src="/<%= order.photo %>" alt="photo"></td>
                        <td>
                            <form action="/admininterface/delete/<%= order._id %>" method="POST">
                                <button type="submit" class="delete-btn">Delete</button>
                            </form>
                        </td>
                        <td>
                            <a href="http://localhost:8080/admininterface/email" class="view-link">Confirm Order</a>
                        </td>
                    </tr>
                <% }) %>
            </tbody>
        </table>
    </div>
</body>
</html>
