    <style>
        #swiper_slider_8{
            background: url(https://images.pexels.com/photos/17172502/pexels-photo-17172502/free-photo-of-volcano-and-forest.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=2);
            padding: 70px 0;
            background-size: cover;
            background-repeat: no-repeat;
            position: relative;
            width: 100vw;
            height: 100vh;
        }
        #swiper_slider_8:after{
            content: '';
            position: absolute;
            background: rgba(84, 100, 91, .75);
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
        }
        #swiper_slider_8 .title{
            position: relative;
            z-index: 1;
        }
        #swiper_slider_8 .title:after{
            content: '';
            position: absolute;
            bottom: 15px;
            right: 0;
            border-bottom: 1px solid rgba(255, 255, 255, .35);
            width: 83%;
        }
        #swiper_slider_8 .title h2{
            color: #fff;
            text-transform: capitalize;
            font-size: 40px;
            margin-bottom: 30px;
        }
        #swiper_slider_8 .content img{
            width: 100%;
            transition: all .4s;
        }
        .swiper-button-next:after, .swiper-button-prev:after{
            display: none;
        }
        .swiper-button-next, .swiper-button-prev{
            position: relative;
            top: 0;
            left: 0;
            margin: 0;
            width: auto;
            height: auto;
            padding: 10px 0;
            color: #fff;
        }
        .prev_next_btn i{
            padding: 0 10px;
        } 
        .prev_next_btn{
            top: 50%;
            position: relative;
            transform: translateY(-50%);
            display: inline-block;
            width: 100%;
            text-align: -webkit-center;
            position: relative;
            z-index: 1;
        }
        #swiper_slider_8 .content{
            background: #fff;
            padding: 5px;
            transition: all .4s;
        }
        #swiper_slider_8 .content a{
            text-decoration: none;
            color: #000;
        }
        #swiper_slider_8 .content a .image{
            overflow: hidden;
        }
        #swiper_slider_8 .content:hover a .image img{
            transform: scale(1.1);
        }
        #swiper_slider_8 .des{
            padding: 15px 10px;
            text-align: center;
        }
        #swiper_slider_8 .des span{
            text-transform: capitalize;
            color: #777;
        }
        #swiper_slider_8 .des h3{
            font-size: 20px;
            margin-bottom: 10px;
            font-weight: 600;
            transition: all .4s;
        }
        #swiper_slider_8 .content:hover .des h3{
            color: #A75654;
        }
        #swiper_slider_8 .des p{
            margin: 0;
            font-weight: 600;
        }
    </style>
  </head>
